<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MvpExample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MvpExample.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.MvpExample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/transparent</item>
    </style>

    <style name="Theme.MvpExample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="expandedBarTextStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="collapsedBarTextStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.CaptionStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/caption</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Text.CaptionStyle.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Text.CaptionStyle.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Text.CaptionStyle.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
</resources>